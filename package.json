{
  "name": "alexhunt.io",
  "version": "1.0.0",
  "author": "Alex Hunt <hello@alexhunt.io>",
  "description": "Personal website",
  "homepage": "https://alexhunt.io",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/huntie/alexhunt.io"
  },
  "scripts": {
    "build": "run-s site assets",
    "site": "metalsmith",
    "assets": "run-p css images fonts",
    "css": "postcss --config postcss.json",
    "images": "run-p images.webp images.jpeg images.svg",
    "images.webp": "imagemin src/assets/img/* --plugin=webp --out-dir=build/assets/img/",
    "images.jpeg": "imagemin src/assets/img/*.jpg --plugin=mozjpeg --out-dir=build/assets/img/",
    "images.svg": "svgo -f src/assets/img/ -o build/assets/img/",
    "fonts": "sync-files src/assets/fonts/ build/assets/fonts/",
    "watch": "onchange src/** '!src/assets/**' -- npm run site & onchange src/assets/css/** -- npm run css"
  },
  "dependencies": {
    "autoprefixer": "^6.7.2",
    "handlebars": "^4.7.7",
    "helper-date": "^0.2.3",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-webp": "^4.1.0",
    "metalsmith": "^2.3.0",
    "metalsmith-data": "^0.1.2",
    "metalsmith-html-minifier": "^2.4.5",
    "metalsmith-in-place": "^1.0.0",
    "metalsmith-layouts": "^1.8.0",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-medium-data": "^1.0.0",
    "metalsmith-register-helpers": "^0.3.0",
    "npm-run-all": "^4.1.2",
    "postcss": "^5.2.18",
    "postcss-at-rules-variables": "^0.0.27",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-csso": "^1.1.2",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-each": "^0.9.3",
    "postcss-for": "^2.1.1",
    "postcss-import": "^9.1.0",
    "postcss-nesting": "^2.3.1",
    "svgo": "^0.7.2",
    "sync-files": "^1.0.3"
  },
  "devDependencies": {
    "onchange": "^3.3.0"
  }
}
