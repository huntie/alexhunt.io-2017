<div class="grid section">
    <div class="grid-col grid-col-xl-4">
        <article class="bio">
            <p class="lead-paragraph" itemprop="description">London-based web developer. Currently building cool stuff at <a href="https://digital-detox.co.uk" itemprop="worksFor" itemscope itemtype="http://schema.org/Organization">Digital Detox</a>. Avid climber and snowboarder. Follow me on <a href="{{data.links.twitter}}">Twitter</a> or view my open source projects on&nbsp;<a href="{{data.links.github}}">GitHub</a>.</p>
        </article>
    </div>
</div>

<div class="grid">
    <section class="section grid-col grid-col-lg-3 grid-col-xl-2 card-listing">
        <div class="card-listing-items">
            {{#each (take medium.posts 2)}}
                <article class="card">
                    <h1 class="heading heading-primary card-heading">{{title}}</h1>
                    <p>{{excerpt content.subtitle}}</p>
                    <p class="card-metadata"><time datetime="{{date firstPublishedAt ""}}">{{date firstPublishedAt "D MMM YYYY"}}</time></p>
                    <a class="block-link" href="{{url}}"></a>
                </article>
            {{/each}}
        </div>
        <footer class="card-listing-footer">
            <a class="card-listing-source-link" href="{{data.links.medium}}">
                <img class="icon icon-inline card-listing-source-icon" src="/assets/img/icon-medium.svg">
                <span class="card-listing-source-label">View all articles on Medium</span>
            </a>
        </footer>
    </section>

    <section class="section grid-col grid-col-lg-3 grid-col-xl-2 card-listing">
        <div class="card-listing-items">
            {{#each data.projects}}
                <article class="card">
                    <h1 class="heading heading-primary card-heading">{{title}}</h1>
                    <p>{{description}}</p>
                    <a class="block-link" href="{{url}}"></a>
                </article>
            {{/each}}
        </div>
        <footer class="card-listing-footer">
            <a class="card-listing-source-link" href="{{data.links.github}}">
                <img class="icon icon-inline card-listing-source-icon" src="/assets/img/icon-github.svg">
                <span class="card-listing-source-label">View all projects on GitHub</span>
            </a>
        </footer>
    </section>
</div>

